<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pe.edu.upeu.asistencia.controller.UsuarioFormController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f7fafc;">

    <Label text="Formulario de Usuario" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="100" prefWidth="120"/>
            <ColumnConstraints minWidth="200" prefWidth="250" hgrow="ALWAYS"/>
        </columnConstraints>

        <!-- Nombre -->
        <Label text="Nombre Completo:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNombre" promptText="Ingrese el nombre completo"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!-- Username -->
        <Label text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtUsername" promptText="Ingrese el usuario"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!-- Password -->
        <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="txtPassword" promptText="Ingrese la contraseña"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <!-- Rol -->
        <Label text="Rol:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="cmbRol" promptText="Seleccione un rol"
                  GridPane.columnIndex="1" GridPane.rowIndex="3" maxWidth="Infinity"/>

        <!-- Horario -->
        <Label text="Horario:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <ComboBox fx:id="cmbHorario" promptText="Seleccione un horario" maxWidth="Infinity"/>
            <Label fx:id="lblHorarioInfo" text="" style="-fx-text-fill: #667eea; -fx-font-size: 11px;" visible="false"/>
        </VBox>

        <!-- Activo -->
        <Label text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <CheckBox fx:id="chkActivo" text="Usuario Activo"
                  GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>

    <!-- Botones -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Guardar" onAction="#handleGuardar"
                style="-fx-background-color: #48bb78; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"
                defaultButton="true"/>
        <Button text="Cancelar" onAction="#handleCancelar"
                style="-fx-background-color: #e53e3e; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"
                cancelButton="true"/>
    </HBox>

</VBox>